{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "lib": ["ESNext"],
    "moduleResolution": "node",
    "outDir": "./dist",
    "strict": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "types": ["node"],
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    },
    "skipLibCheck": true,
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      }
    ],
    "esModuleInterop": true,
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"],
  "files": ["src/index.ts"],
}
